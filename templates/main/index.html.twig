{% extends 'base.html.twig' %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block body %}

<div>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Partagez vos plus belles photo de fleurs</h1>
            <p class="lead">Invitons des amis à eller les voir, ou buvons et dansons en bonne compagnie sous les fleurs</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/post/add" role="button">Partager une photo</a>
            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
		    <div class="col s12 m12 l12">
                {% if posts %}
			    <h2 class="text-center">Dernières publications sur flowerLovers</h2>
                {% else %}
                <h2 class="text-center">Il y a aucune publication</h2>
                {% endif %}
		    </div>
	    </div>

        <div class="row">
            <div class="card-deck">
                {% for post in posts %}
                <div>
                    <div class="card">
                        <img class="card-img-top mw-50" src="{{ asset('assets/images/plantes.jpg') }}" alt="Plantes">
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text"><small class="text-muted">{{ post.lastUpdateDate }}</small></p>
                        </div
                    </div>
                </div>
                <div>
                    <div class="card">
                        <img class="card-img-top mw-50" src="{{ asset('assets/images/plantes.jpg') }}" alt="Plantes">
                        <div class="card-body">
                            <h5 class="card-title">Titre</h5>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
