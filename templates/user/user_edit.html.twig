{% extends 'base.html.twig' %}

{% block title %}Modifier mon compte{% endblock %}

{% block body %}
<div class="container">

    <div class="my-5">
        <h1 class="text-center">Modifier mon compte</h1>
    </div>
    <div>
        {{ form_start(editAccountForm, {'attr': {'class': 'col-6 offset-md-3 mb-5'}}) }}
            <div class="mb-3">
                {{ form_label(editAccountForm.username, 'Nom utilisateur') }}
                {{ form_widget(editAccountForm.username, {'attr': {'class': 'form-control'}}) }}
                <span class="error">{{ form_errors(editAccountForm.username) }}</span>
            </div>
            <div class="mb-3">
                {{ form_label(editAccountForm.email, 'Email') }}
                {{ form_widget(editAccountForm.email, {'attr': {'class': 'form-control'}}) }}
                <span class="error">{{ form_errors(editAccountForm.email) }}</span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Modifier</button>
            </div>    
        {{ form_end(editAccountForm) }}
    </div>   
</div>
{% endblock %}